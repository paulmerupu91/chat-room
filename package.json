{
	"name": "chat-room",
	"version": "1.0.0",
	"description": "A simple chat room app built with socket.io and React",
	"source": "frontend/main.js",
	"targets": {
		"frontend": {
			"source": "app/index.html"
		},
		"backend": {
			"context": "node",
			"source": "api/index.js"
		}
	},
	"nodemonConfig": {
		"ignore": [
			"**/app/**",
			"**/docs/**"
		],
		"delay": 2500
	},
	"scripts": {
		"start": "parcel watch",
		"build": "parcel build",
		"watch": "nodemon --watch dist --inspect ./dist/backend/index.js",
		"prisma:generate": "prisma generate"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "^4.14.1",
		"body-parser": "^1.20.2",
		"bootstrap": "^5.3.0-alpha3",
		"express": "^4.18.2",
		"google-auth-library": "^8.8.0",
		"jwt-decode": "^3.1.2",
		"react": "^18.2.0",
		"react-avatar": "^5.0.3",
		"react-dom": "^18.2.0",
		"react-hot-toast": "^2.4.1",
		"socket.io": "^4.6.1"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "^2.8.3",
		"@types/node": "^20.2.1",
		"assert": "^2.0.0",
		"browserify-zlib": "^0.2.0",
		"buffer": "^5.7.1",
		"crypto-browserify": "^3.12.0",
		"events": "^3.3.0",
		"https-browserify": "^1.0.0",
		"nodemon": "^2.0.22",
		"os-browserify": "^0.3.0",
		"parcel": "^2.8.3",
		"path-browserify": "^1.0.1",
		"prisma": "^4.14.1",
		"process": "^0.11.10",
		"punycode": "^1.4.1",
		"querystring-es3": "^0.2.1",
		"stream-browserify": "^3.0.0",
		"stream-http": "^3.2.0",
		"string_decoder": "^1.3.0",
		"timers-browserify": "^2.0.12",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"url": "^0.11.0",
		"util": "^0.12.5"
	}
}
